{
  "name": "vs-code-streaming",
  "displayName": "VS Code Streaming",
  "description": "Allows the code to be displayed in a separate window that can be used as a browser source for streaming software. This allows a display specifically adapted to the stream without having to change the display for the programmer/streamer.",
  "version": "0.0.1",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/express-ws": "^3.0.1",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.69.0",
    "@types/ws": "^8.5.3",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.7",
    "@vscode/test-electron": "^2.1.5",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.20.0",
    "event-hooks-webpack-plugin": "^2.2.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "vue-eslint-parser": "^9.0.3",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "express": "^4.18.1",
    "express-ws": "^5.0.2",
    "vscode-web": "^1.69.2",
    "fs-extra": "10.1.0"
  },
  "scripts": {
    "sender-vscode:prepublish": "cd ./projects/sender && npm run package",
    "sender-compile": "cd ./projects/sender && webpack",
    "sender-watch": "cd ./projects/sender && webpack --watch",
    "sender-package": "cd ./projects/sender && webpack --mode production --devtool hidden-source-map",
    "receiver-vscode:prepublish": "cd ./projects/receiver && npm run package-receiver",
    "receiver-compile": "cd ./projects/receiver && webpack",
    "receiver-watch": "cd ./projects/receiver && webpack --watch",
    "receiver-package": "cd ./projects/receiver && webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts"
  }
}