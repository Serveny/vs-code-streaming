// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "tasks: watch-sender",
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$ts-webpack-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"path": "./projects/sender",
			"dependsOn": "tasks: watch-receiver"
		},
		{
			"type": "npm",
			"script": "watch-tests",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "watchers"
			},
			"group": "build",
			"path": "./projects/sender"
		},
		{
			"label": "tasks: watch-tests",
			"dependsOn": [
				"npm: watch",
				"npm: watch-tests"
			],
			"problemMatcher": [],
		},
		{
			"label": "tasks: compile-web",
			"type": "npm",
			"script": "compile-web",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$ts-webpack",
				"$tslint-webpack"
			],
			"path": "./projects/web"
		},
		{
			"label": "tasks: watch-receiver",
			"type": "npm",
			"script": "watch-receiver",
			"group": "build",
			"isBackground": true,
			"problemMatcher": [
				"$ts-webpack-watch",
				"$tslint-webpack-watch"
			],
			"path": "./projects/receiver"
		}
	]
}