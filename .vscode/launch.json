// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [
		/* 
		sender Extension
		*/
		{
			"name": "Run sender Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/projects/sender"
			],
			"outFiles": [
				"${workspaceFolder}/projects/sender/dist/**/*.js"
			],
			"preLaunchTask": "tasks: watch-sender"
		},
		/* 
		sender Extension Tests
		*/
		{
			"name": "Extension Tests",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/projects/sender",
				"--extensionTestsPath=${workspaceFolder}/projects/sender/out/test/suite/index"
			],
			"outFiles": [
				"${workspaceFolder}/projects/sender/out/**/*.js",
				"${workspaceFolder}/projects/sender/dist/**/*.js"
			],
			"preLaunchTask": "tasks: watch-tests"
		},
		/* 
		receiver Extension
		*/
		{
			"name": "Run receiver Extension ",
			"type": "extensionHost",
			"debugWebWorkerHost": true,
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/projects/receiver",
				"--extensionDevelopmentKind=receiver"
			],
			"outFiles": [
				"${workspaceFolder}/projects/receiver/dist/receiver/**/*.js"
			],
			"preLaunchTask": "tasks: watch-receiver"
		},
		/* 
		receiver Extension Tests
		*/
		{
			"name": "receiver Extension Tests",
			"type": "extensionHost",
			"debugWebWorkerHost": true,
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/projects/receiver",
				"--extensionDevelopmentKind=receiver",
				"--extensionTestsPath=${workspaceFolder}/projects/receiver/dist/receiver/test/suite/index"
			],
			"outFiles": [
				"${workspaceFolder}/projects/receiver/dist/receiver/**/*.js"
			],
			"preLaunchTask": "npm: watch-receiver"
		}
	]
}